{
  "apps": [
    {
      "name": "sim-track",
      "script": "server.js",
      "instances": "1",
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "develop",
        "EMAIL_ENABLED": "true",
        "watch": "server",
        "ignore_watch": "public/uploads*"
      },
      "env_production": {
        "NODE_ENV": "production",
        "watch": false,
        "PORT": 4000
      }
    }
  ]
}
