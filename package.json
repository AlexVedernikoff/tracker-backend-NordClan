{
  "name": "sim-track-back",
  "version": "1.0.0",
  "description": "Simbirsoft task tracker backend",
  "main": "index.js",
  "scripts": {
    "test": "./node_modules/mocha/bin/mocha --recursive",
    "compose:up": "docker-compose up -d",
    "compose:dev": "docker-compose -f docker-compose.dev.yml up --build --abort-on-container-exit",
    "compose:stop": "docker-compose stop",
    "restart:dev": "docker-compose -f docker-compose.dev.yml up --abort-on-container-exit --no-build",
    "precommit": "lint-staged",
    "migrate": "node_modules/.bin/sequelize db:migrate",
    "rollback": "node_modules/.bin/sequelize db:migrate:undo",
    "dump:test": "pg_db/dumps/pg_dump_test.sh",
    "dump:dev": "pg_db/dumps/pg_dump_dev.sh"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.simbirsoft:frontend/sim-track-back.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "api-error-handler": "^1.0.0",
    "async": "^2.4.1",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.17.2",
    "convert-layout": "^0.7.0",
    "cookie-parser": "^1.4.3",
    "crypto": "^1.0.1",
    "exact-math": "^1.0.0",
    "exceljs": "^0.8.1",
    "express": "^4.15.3",
    "express-validator": "^3.2.0",
    "formidable": "^1.1.1",
    "gm": "^1.23.0",
    "http-errors": "^1.6.1",
    "jwt-simple": "^0.5.1",
    "ldapjs": "^1.0.1",
    "mkdirp": "^0.5.1",
    "moment": "^2.18.1",
    "moment-array-dates": "^2.0.3",
    "nodemailer": "^4.4.0",
    "os": "^0.1.1",
    "pg": "^6.2.3",
    "request": "^2.81.0",
    "sequelize": "3.24.3",
    "sequelize-cli": "^2.7.0",
    "sequelize-replace-enum-postgres": "^1.3.0",
    "sequelize-transforms": "^1.0.0",
    "socket.io": "^2.0.4",
    "swagger-express": "^1.0.5",
    "winston": "^3.0.0-rc1",
    "xml2json": "^0.11.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.4.1",
    "husky": "^0.14.3",
    "lint-staged": "^4.3.0",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.0",
    "sequelize-log-syntax-colors": "^1.0.0"
  }
}
